
@{
    ViewBag.Title = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row w-100 row-eq-height" style="margin-top:4rem">
        @foreach (var recipe in Model.recipes)
        {
        <div class="col-md-4 w-100 px-2 mt-2">
            <div class="card w-100" >
                <img src="@recipe.cover" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@recipe.Name</h5>
                    <p class="card-text">@recipe.Description</p>
                    <a  onclick="location.href = '@Url.Action("Recipe/1","Home")'; return false;" class="btn btn-primary">view</a>
                </div>
            </div>
        </div>
        }
    </div>

