
@{
    ViewBag.Title = "Diets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row w-100 row-eq-height" style="margin-top:4rem">
    @foreach (var diet in Model.diets)
    {
        <div class="col-md-4 w-100 px-2 mt-2">
            <div class="card w-100">
                <img src="@diet.Cover" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@diet.Name</h5>
                    <p class="card-text">@diet.Description</p>
                    <a onclick="location.href = '@Url.Action("diet/1","Home")'; return false;" class="btn btn-primary">view</a>
                </div>
            </div>
        </div>
    }
</div>
