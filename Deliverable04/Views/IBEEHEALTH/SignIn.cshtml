@model Deliverable04.Models.LoginViewModel
@{
    Layout = null;
}


@{
    ViewBag.Title = "SigIn";
}

<link href="~/Content/SignInStyle.css" rel="stylesheet" />

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/bootstrap.bundle.min.js"></script>

<script src="~/Scripts/jquery-3.0.0.slim.js"></script>
<link href="~/Scripts/all.css" rel="stylesheet" />
@TempData["msg"]

<nav>
    <div>
        <a class="navbar-brand" onclick="location.href='@Url.Action("Contact", "Home")';return false;">
            <img src="~/Content/Land/img/logo.png" style="width:15%" alt="">
        </a>
    </div>
</nav>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        @using (Html.BeginForm("SignIn", "IBEEHEALTH", FormMethod.Post))
                        {

                            <form class="form-signin">
                                <div class="form-label-group">

                                   <input name="Email" type="text" class="form-control" focus autofocus required />
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                                </div>

                                <div class="form-label-group">

                                    <input name="Password" type="password" class="form-control" focus autofocus  required/>
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })

                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember password</label>
                                </div>
                                <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Sign in</button>
                                <hr class="my-4">
                                <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit" onclick="location.href='@Url.Action("Register", "IBEEHEALTH")';return false;">Register</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



